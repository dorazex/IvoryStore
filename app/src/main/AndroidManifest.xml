<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.IvoryStore">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name="com.example.IvoryStore.EmailPasswordActivity" />
        <activity android:name="com.example.IvoryStore.GoogleSignInActivity" />
        <activity android:name="com.example.IvoryStore.FacebookSignInActivity" />
        <activity android:name="com.example.IvoryStore.SignInActivity" />
        <activity android:name="com.example.IvoryStore.AnonymousHomeActivity" />

        <activity android:name="com.example.IvoryStore.IvoryStoreMain"
            android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name="com.example.IvoryStore.SplashActivity"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.IvoryStore.IvoryDetailsActivity"
            android:theme="@style/Theme.AppCompat"/>
        <activity android:name="com.example.IvoryStore.ReviewActivity"
            android:theme="@style/Theme.AppCompat"/>

    </application>

</manifest>